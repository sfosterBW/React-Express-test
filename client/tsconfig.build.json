{
    "extends": "../tsconfig.build.json",
    "compilerOptions": {
        "outDir": "./build",
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "skipLibCheck": true,
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "jsx": "react",
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "build",
        "coverage"
    ]
}